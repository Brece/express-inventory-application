<%- include('partials/_header' , { url })  %>

<!-- TODO: rework layout -->
<div class="lg:w-full lg:max-w-4xl lg:mx-auto lg:my-0 mx-3 sm:mx-5 md:mx-10 c-item-detail c-brand-delete">
    <h1 class="text-3xl sm:text-4xl md:text-5xl mb-5 sm:mb-8 md:mb-10 font-bold"><%= title %></h1>
    <div class="mb-10 pb-5 lg:mb-20 lg:pb-10 border-dark border-b c-brand-delete__container">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-medium mb-3 sm:mb-5"><%= brand.name %></h2>
        <p class="text-sm mb-1"><%= brand.location %></p>
        <p class="mb-3"><%= brand.description %></p>

    <% if (brand.protected) { -%>
        <p class="mb-3 font-medium text-danger text-sm">This Document is protected and cannot be changed or deleted.</p>
    <% } else { -%>
        <form action="/brand/<%= brand._id  %>/delete" method="POST">
            <input type="hidden" name="brandid" value=<%= brand._id %>>
            <button type="submit" class="c-btn c-btn--delete">Delete</button>
        </form>
    <% } -%>
    </div>

    <% if (brand_items.length > 0) { -%>
        <h3 class="font-bold mb-3">Please delete/edit these products first in order to delete the brand:</h3>
        <ul class="flex flex-wrap items-center justify-start c-brand__delete__list">
            <% brand_items.forEach(function (item) { -%>
                <li class="mr-3 mb-5 c-brand__delete__list__item">
                    <a href="<%= item.url %>"
                        class="inline-block md:py-2 md:px-4 py-1 px-2 rounded-lg bg-dark text-white md:font-bold sm:font-normal md:text-lg sm:text-sm transition-all duration-100 hover:scale-110 hover:opacity-80">
                        <%= item.title %>
                    </a>
                </li>
            <% }) %> 
        </ul>
    <% } -%>
</div>

<%- include('partials/_footer') %> 