<%- include('partials/_header') %>

<div>
    <% if ( brand === undefined ? false : brand.protected) { -%>
        <p>This Document is protected and cannot be changed or deleted.</p>
    <% } -%>

    <% if (brand === undefined ? true : !brand.protected) { -%>
        <h1><%= title %></h1>
        <form
            action="<%= update ? `/brand/${ brand._id }/update` : '/brand/create' %>"
            method="POST"
            enctype="multipart/form-data"
            class="c-form">
            <div class="c-form__group">
                <label for="name">Name</label>
                <input 
                    type="text"
                    id="name"
                    name="name"
                    required
                    placeholder="e.g. Electronics"
                    value="<%= brand ? brand.name : '' %>">
            </div>
            <div class="c-form__group">
                <label for="description">Description</label>
                <textarea type="text" id="description" required name="description" rows="5" cols="33"><%= brand ? brand.description : '' %></textarea>
            </div>
            <div class="c-form__group">
                <label for="location">Location</label>
                <input 
                    type="text"
                    id="location"
                    name="location"
                    required
                    placeholder="e.g. Asia"
                    value="<%= brand ? brand.location : '' %>">
            </div>
            <div class="c-form__group">
                <label for="image">Upload Image (< 300kb)</label>
                <input type="file" id="image" name="image" required>
            </div>
            <button class="c-btn" type="submit">Submit</button>
        </form>
    <% } -%>
</div>

<% if(errors) { %>
    <div class="c-errors">
        <% errors.forEach(function (err, index) { %>
            <div>
                <h4>Error #<%= index + 1 %></h4>
                <p>Error Message: <%= err.msg %></p>
                <p>Parameter: <%= err.param %></p>
            </div>
        <% }) %> 
    </div>
<% } %> 

<%- include('partials/_footer') %>
