<%- include('partials/_header') %>

<div>
    <% if ( category === undefined ? false : category.protected) { -%>
        <p>This Document is protected and cannot be changed or deleted.</p>
    <% } -%>

    <% if (category === undefined ? true : !category.protected) { -%>
        <h1><%= title %></h1>
        <form
            action="<%= update ? `/category/${ category._id }/update` : '/category/create' %>"
            method="POST"
            class="c-form">
            <div class="c-form__group">
                <label for="name">Name</label>
                <input 
                    type="text"
                    id="name"
                    name="name"
                    required
                    placeholder="e.g. Electronics"
                    value="<%= category ? category.name : '' %>">
            </div>
            <div class="c-form__group">
                <label for="description">Description</label>
                <textarea type="text" id="description" required name="description" rows="5" cols="33"><%= category ? category.description : '' %></textarea>
            </div>
        
            <button class="c-btn" type="submit">Submit</button>
        </form>
    <% } -%>
</div>

<% if(errors) { %>
    <div class="c-errors">
        <% errors.forEach(function (err, index) { %>
            <div>
                <h4>Error #<%= index + 1 %></h4>
                <p>Error Message: <%= err.msg %></p>
                <p>Parameter: <%= err.param %></p>
            </div>
        <% }) %> 
    </div>
<% } %> 

<%- include('partials/_footer') %>
