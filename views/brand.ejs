<%- include('partials/_header') %> 

<div class="o-wrap c-brand">
    <h1><%= title %></h1>
    
    <form action="/brand/create" method="GET">
        <button type="submit">Create a new brand</button>
    </form>

    <% if (brand_list.length > 0) { -%>
        <ul>
            <% brand_list.forEach(function (brand) { -%>
                <li>
                    <a href="/brand/<%= brand._id %>">
                        <h3><%= brand.name %></h3>
                        <p><%= brand.description %></p>
                    </a>
                </li>
            <% }) %> 
        </ul>
    <% } -%>
</div>

<%- include('partials/_footer') %> 
