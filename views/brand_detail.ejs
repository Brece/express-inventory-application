<%- include('partials/_header') %> 

<!-- TODO: rework layout; brand details with edit and delete buttons; display lists of items that belong to this brand -->
<div class="o-wrap c-brand-detail">
    <h1><%= title %></h1>
    <div class="c-brand-detail__container">
        <h2><%= brand.name %></h2>
        <p><%= brand.description %></p>
        <p><%= brand.location %></p>
    </div>

    <% if (brand.protected) { -%>
        <p>This Document is protected and cannot be changed or deleted.</p>
    <% } else { -%>
        <div class="c-brand__btns">
            <form action="/brand/<%= brand._id %>/update" method="GET">
                <button class="c-btn" type="submit">Update</button>
            </form>
            <form action="/brand/<%= brand._id %>/delete" method="GET">
                <button class="c-btn" type="submit">Delete</button>
            </form>
        </div>
    <% } -%>

    <% if (brand_items.length > 0) { %>
        <div class="c-brand-detail__items">
            <% for (const item of brand_items) { %>
                <%- include('partials/_item_card', { item }) %>
            <% } %>
        </div>
    <% } %>
</div>

<%- include('partials/_footer') %> 